{
  "$schema": "http://json-schema.org/schema",
  "id": "BasisSchematics",
  "title": "기초코드 템플릿",
  "type": "object",
  "properties": {
    "templateName": {
      "type": "string",
      "description": "템플릿 이름",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "className": {
      "type": "string",
      "minLength": 2,
      "description": "클래스 또는 파일 이름",
      "x-prompt": "클래스명 입력 (ex> BsSalesCountryCode) : "
    },
    "pageTitle": {
      "type": "string",
      "minLength": 2,
      "description": "페이지 제목",
      "x-prompt": "페이지 제목 (ex> 세일즈국가코드관리) : "
    },
    "targetPath": {
      "type": "string",
      "minLength": 1,
      "description": "설치 경로",
      "x-prompt": "설치 경로 : ",
      "default": "/src/app/routes"
    }
  },
  "required": ["templateName", "className", "pageTitle", "targetPath"]
}
