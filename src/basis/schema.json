{
  "$schema": "http://json-schema.org/schema",
  "id": "BasisSchematics",
  "title": "기초코드 템플릿",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "클래스 또는 파일 이름",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "클래스명 입력 (ex> BsSalesCountryCode) : "
    },
    "title": {
      "type": "string",
      "description": "페이지 제목",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "페이지 제목 (ex> 세일즈국가코드관리) : "
    },
    "targetPath": {
      "type": "string",
      "description": "설치 경로",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "default": "/src/app/routes",
      "x-prompt": "설치 경로 : "
    },
    "withComponent": {
      "type": "string",
      "description": "컴포넌트 포함 여부",
      "$default": {
        "$source": "argv",
        "index": 3
      },
      "default": "N",
      "x-prompt": "컴포넌트 포함 (Y/N) : "
    },
    "project": {
      "type": "string",
      "description": "Angular CLI workspace project"
    }
  },
  "required": ["name", "title", "targetPath", "withComponent"]
}
